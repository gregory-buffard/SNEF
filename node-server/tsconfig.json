{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "target": "ES2020",
    "lib": ["ES2020"],
    "strict": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    },
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
